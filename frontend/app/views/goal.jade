div(ng-controller="viewGoalCtrl as goalctrl")
  
  h2("Detalles del objetivo") 
  
  label Goal description
  input(type="text" ng-model="goal.currgoal.name")
  
  label Priority
  select(ng-model="goal.currgoal.priority")
  
  button(ng-click="goal.editgoal()") Save changes
  
  div
    p Goal solution options
    
    ul("")
      li(ng-repeat="alt in goal.alternatives")
        p(alt.description)
  
  
  div
    p Current goals is a subgoal for:
    
    ul("")
      li(ng-repeat="mo in goal.meta")
        p("{{mo.goal.name}}, through the solution option {{mo.alternative.description}}")
